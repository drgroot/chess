{
  "extends": [
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "ignorePatterns": [
    "vendors/**/*.js",
    "src/**/*.css"
  ],
  "rules": {
    "no-restricted-syntax": [
      2,
      "BinaryExpression[operator='in']"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/test/**"
        ]
      }
    ]
  }
}